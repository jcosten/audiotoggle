<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <runtime>
    <!-- Configure garbage collection for minimal memory usage -->
    <gcServer enabled="false" />
    <gcConcurrent enabled="true" />
    <gcRetainVM enabled="false" />
    
    <!-- Disable tiered compilation to reduce memory overhead -->
    <TieredCompilation enabled="false" />
    <TieredCompilation_QuickJit enabled="false" />
    
    <!-- Optimize thread pool for minimal resource usage -->
    <ThreadPool_UnfairSemaphoreSpinLimit enabled="true">0</ThreadPool_UnfairSemaphoreSpinLimit>
  </runtime>
  
  <appSettings>
    <!-- Additional memory optimization settings -->
    <add key="EventSourceSupport" value="false" />
    <add key="UseSystemResourceKeys" value="true" />
  </appSettings>
</configuration>
