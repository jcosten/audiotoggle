<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AudioToggle"
        x:Class="AudioToggle.SettingsWindow"
        Title="Audio Toggle - Settings"
        Width="500"
        Height="400">
        <TabControl>
        <TabItem Header="Audio Devices">
            <StackPanel>
                <TextBlock Text="Audio Devices:" Margin="10" />
                <TextBlock Text="Check devices to include in hotkey cycling:" Margin="10,0,10,5" FontSize="12" Foreground="Gray"/>
                <ScrollViewer Margin="10" Height="250" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="AudioDevicesListBox">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type local:DeviceViewModel}">
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <CheckBox IsChecked="{Binding IsEnabled}" Margin="0,0,10,0" VerticalAlignment="Center"/>             
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" PointerPressed="DeviceText_PointerPressed"/>
                                    <TextBlock Text="  active  " Foreground="Green" Margin="0,0,5,0" IsVisible="{Binding IsDefault}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </TabItem>
        
        <TabItem Header="Hotkeys">
            <StackPanel>
                <TextBlock Text="Hotkey Settings:" Margin="10" FontWeight="Bold" />
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Switch Audio Device:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
<TextBox x:Name="HotkeyTextBox" Grid.Row="0" Grid.Column="1" Text="Ctrl+Shift+F1" IsReadOnly="False" Margin="5" Watermark="Press keys to set hotkey..."/>
                    
                    <Button x:Name="ChangeHotkeyButton" Grid.Row="1" Grid.Column="1" Content="Reset to Default" Margin="5" HorizontalAlignment="Left"/>
                </Grid>
            </StackPanel>
        </TabItem>
        
        <TabItem Header="General">
            <StackPanel>
                <TextBlock Text="General Settings:" Margin="10" FontWeight="Bold" />
                <CheckBox x:Name="StartWithWindowsCheckBox" Content="Start with Windows" Margin="10"/>
                <CheckBox x:Name="ShowNotificationsCheckBox" Content="Show device change notifications" Margin="10" IsChecked="True"/>
                
                <Separator Margin="10"/>
                
                <TextBlock Text="About:" Margin="10" FontWeight="Bold" />
                <TextBlock Text="AudioToggle v1.0" Margin="15,5"/>
                <TextBlock Text="Quick audio device switching utility" Margin="15,5" Foreground="Gray"/>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
